{
  "name": "just-another-di",
  "version": "0.1.0",
  "description": "Just another dependency injection solution for JavaScript",
  "main": "dist/index.js",
  "typings": "definitions/index",
  "typescript": {
    "definition": "definitions/index"
  },
  "author": "Valery Vargin <VDVUGaD@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "tsc",
    "test": "mocha -r ts-node/register --check-leaks --bail --check-leaks lib/**/*.spec.ts",
    "test-cov": "nyc mocha -r ts-node/register --check-leaks --bail --check-leaks lib/**/*.spec.ts"
  },
  "nyc": {
    "reporter": "html",
    "report-dir": "coverage",
    "extension": [
      ".ts"
    ],
    "include": [
      "lib/**/*.ts"
    ],
    "exclude": [
      "lib/**/*.spec.ts"
    ],
    "all": true
  },
  "devDependencies": {
    "@types/assert": "^1.5.2",
    "@types/chai": "^4.1.3",
    "@types/mocha": "^8.0.3",
    "chai": "^4.1.2",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  }
}
