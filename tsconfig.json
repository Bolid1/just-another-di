{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "noUnusedLocals": false,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "declarationDir": "definitions"
  },
  "include": [
    "index.ts",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib/**/*.spec.ts"
  ]
}