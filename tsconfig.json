{
  "compilerOptions": {
    "lib": [
      "es6",
      "dom"
    ],
    "module": "CommonJS",
    "target": "es5",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "removeComments": false,
    "declarationDir": "definitions"
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "lib/**/*.spec.ts"
  ]
}
